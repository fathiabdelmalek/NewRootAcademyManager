<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fathi.newrootacademymanager.controllers.teachers.TeachersListController">
    <VBox prefHeight="800.0" prefWidth="280.0" spacing="2.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox prefHeight="100.0" prefWidth="200.0">
            <Label text="Search" />
            <TextField fx:id="searchText" onKeyTyped="#searchAction" prefHeight="26.0" prefWidth="102.0" />
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <Button mnemonicParsing="false" onAction="#addAction" text="Add Student" />
        </HBox>
        <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
        </padding>
    </VBox>
    <TableView fx:id="tableView" layoutX="280.0" prefHeight="800.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="280.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columns>
            <TableColumn minWidth="180.0" prefWidth="180.0" text="First Name">
                <cellValueFactory>
                    <PropertyValueFactory property="firstName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="180.0" prefWidth="180.0" text="Last Name">
                <cellValueFactory>
                    <PropertyValueFactory property="lastName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn minWidth="180.0" prefWidth="180.0" text="Phone Number">
                <cellValueFactory>
                    <PropertyValueFactory property="phoneNumber" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="actionsColumn" prefWidth="100.0" text="Actions" />
        </columns>
    </TableView>
</AnchorPane>
