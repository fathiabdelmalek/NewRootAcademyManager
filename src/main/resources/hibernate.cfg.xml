<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
        "https://hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:~/new_root_academy_manager</property>
        <property name="connection.username">sa</property>
        <property name="connection.autocommit">true</property>
        <property name="show_sql">true</property>

        <mapping class="com.fathi.newrootacademymanager.models.Grade"/>
        <mapping class="com.fathi.newrootacademymanager.models.Room"/>
        <mapping class="com.fathi.newrootacademymanager.models.Student"/>
        <mapping class="com.fathi.newrootacademymanager.models.Lesson"/>
        <mapping class="com.fathi.newrootacademymanager.models.Teacher"/>
        <mapping class="com.fathi.newrootacademymanager.models.Income"/>
        <mapping class="com.fathi.newrootacademymanager.models.Expense"/>
        <mapping class="com.fathi.newrootacademymanager.models.Attendance"/>
        <mapping class="com.fathi.newrootacademymanager.models.Activity"/>
    </session-factory>
</hibernate-configuration>
