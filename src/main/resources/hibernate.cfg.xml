<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
        "https://hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hbm2ddl.auto">update</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/new_root_academy_manager_db</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.username">fathi</property>
        <property name="connection.password">2211</property>
        <property name="show_sql">true</property>
        <mapping class="com.fathi.newrootacademymanager.models.Grade"/>
        <mapping class="com.fathi.newrootacademymanager.models.Room"/>
        <mapping class="com.fathi.newrootacademymanager.models.Student"/>
        <mapping class="com.fathi.newrootacademymanager.models.Lesson"/>
        <mapping class="com.fathi.newrootacademymanager.models.Teacher"/>
        <mapping class="com.fathi.newrootacademymanager.models.Income"/>
        <mapping class="com.fathi.newrootacademymanager.models.Expense"/>
        <mapping class="com.fathi.newrootacademymanager.models.Attendance"/>
        <mapping class="com.fathi.newrootacademymanager.models.Activity"/>
        <mapping class="com.fathi.newrootacademymanager.models.StudentView"/>
        <mapping class="com.fathi.newrootacademymanager.models.LessonView"/>
        <mapping class="com.fathi.newrootacademymanager.models.IncomeView"/>
        <mapping class="com.fathi.newrootacademymanager.models.ExpenseView"/>
        <mapping class="com.fathi.newrootacademymanager.models.AttendanceView"/>
    </session-factory>
</hibernate-configuration>
